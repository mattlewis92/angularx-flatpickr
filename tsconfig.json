{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "test",
    "demo",
    "custom-typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
